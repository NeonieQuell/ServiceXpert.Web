@model IssuesViewModel
<div class="table-responsive">
    <table class="table table-hover table-borderless table-issue">
        <thead>
            <tr>
                <th scope="col">Key</th>
                <th scope="col">Summary</th>
                <th scope="col">Priority</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var issue in Model.Issues)
            {
                <tr>
                    <th scope="row">
                        <a href="#">@issue.IssueKey</a>
                    </th>
                    <td>
                        <a href="#">@issue.Name</a>
                    </td>
                    <td>
                        <span class="issue-priority priority-@issue.IssuePriorityId">
                            @issue.IssuePriority!.Name
                        </span>
                    </td>
                    <td>@issue.IssueStatus!.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>