@model List<Comment>

@foreach (var comment in Model)
{
    <div class="row mb-3">
        <div class="col-12">
            <div>
                <div class="d-flex flex-start">
                    <img class="rounded-circle border border-black mt-2 me-3" src="~/default-avatar.png" alt="Avatar" width="32" height="32" />
                    <div>
                        <p class="fw-bold mb-0">
                            John Doe
                            <span class="fw-normal small">- @comment.CreateDateTimeFormatted</span>
                        </p>
                        <p class="mb-0">@comment.Content</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}