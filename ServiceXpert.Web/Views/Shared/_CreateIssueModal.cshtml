@model CreateIssueViewModel

<div class="modal modal-dialog-scrollable fade" id="create-issue-modal" tabindex="-1" aria-labelledby="create-issue-modal-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="create-issue-modal-label">Create Issue</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row mb-3">
                        <div class="col-12">
                            <label for="create-issue-modal-name-field" class="form-label">
                                Title <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" id="create-issue-modal-name-field" placeholder="">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <label for="create-issue-modal-description-field" class="form-label">Description</label>
                            <textarea class="form-control" id="create-issue-modal-description-field" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-12">
                            <label for="create-issue-modal-priority-field" class="form-label">
                                Priority <span class="text-danger">*</span>
                            </label>
                            <select class="form-select" id="create-issue-modal-priority-field" aria-label="Issue Priority">
                                <option selected disabled>Select priority</option>
                                @foreach (var priority in Model.IssuePriorities)
                                {
                                    <option value="@(Model.IssuePriorities.IndexOf(priority) + 1)">@priority</option>
                                }
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success">Save</button>
            </div>
        </div>
    </div>
</div>