@using ServiceXpert.Web.Extensions
@{
    var navbarBrand = "ServiceXpert";
    ViewData["FooterYear"] = DateTime.UtcNow.Year;
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ServiceXpert</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/ServiceXpert.Web.styles.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="modal-container"></div>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary border-bottom box-shadow">
            <div class="container">
                <div class="d-flex align-items-center">
                    <button class="navbar-toggler d-lg-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvas-navbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand d-none d-lg-block fw-semibold text-light">@navbarBrand</a>
                </div>
                <div class="offcanvas offcanvas-start bg-primary" tabindex="-1" id="offcanvas-navbar">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title d-lg-none fw-semibold text-light" id="offcanvas-navbar-label">@navbarBrand</h5>
                        <button type="button" class="btn btn-close" data-bs-dismiss="offcanvas"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav">
                            <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link text-light">Dashboard</a></li>
                            <li class="nav-item"><a asp-controller="Issues" asp-action="Index" class="nav-link text-light">Issues</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        <div class="container py-3">
            <div id="alert-container"></div>
            @RenderBody()
        </div>
    </main>
    <footer class="border-top text-muted py-3">
        <div class="container">
            &copy; @ViewData["FooterYear"] - @navbarBrand - Developed by Neonie Quell Ponce.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/create-issue.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
