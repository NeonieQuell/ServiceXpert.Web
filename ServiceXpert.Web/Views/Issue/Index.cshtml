@{
    ViewData["Title"] = "Issues";
}

<div class="row">
    <div class="col-12">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>
<div class="row mt-3">
    <div class="col-12">
        <ul class="nav nav-tabs" id="issue-tabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="all-issues-tab" data-bs-toggle="tab" data-tab="All" role="tab"
                aria-controls="All">
                    All
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="open-issues-tab" data-bs-toggle="tab" data-tab="Open" role="tab"
                aria-controls="Open">
                    Open
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="resolved-issues-tab" data-bs-toggle="tab" data-tab="Resolved" role="tab"
                aria-controls="Resolved">
                    Resolved
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="closed-issues-tab" data-bs-toggle="tab" data-tab="Closed" role="tab"
                        aria-controls="Closed">
                    Closed
                </button>
            </li>
        </ul>
        <div class="tab-content" id="issue-tabs-content">
            @{ ViewData["SpinnerId"] = "issue-tabs-content-spinner"; }
            <partial name="_Spinner" />
            <div class="tab-pane fade" id="all-issues-tab-content" role="tabpanel"></div>
            <div class="tab-pane fade" id="open-issues-tab-content" role="tabpanel"></div>
            <div class="tab-pane fade" id="resolved-issues-tab-content" role="tabpanel"></div>
            <div class="tab-pane fade" id="closed-issues-tab-content" role="tabpanel"></div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/issue.js"></script>
}