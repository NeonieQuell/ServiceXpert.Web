@model IssueViewModel
<div class="table-responsive">
    <table class="table table-hover table-borderless table-issue">
        <thead>
            <tr>
                <th scope="col">Key</th>
                <th scope="col">Summary</th>
                <th scope="col">Assignee</th>
                <th scope="col">Reporter</th>
                <th scope="col">Created On</th>
                <th scope="col">Priority</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var issue in Model.Issues)
            {
                <tr>
                    <th scope="row">
                        <span><a href="#">@issue.IssueKey</a></span>
                    </th>
                    <td>
                        <span class="issue-name"><a href="#">@issue.Name</a></span>
                    </td>
                    <td>
                        <span>Lorem Ipsum</span>
                    </td>
                    <td>
                        <span>Lorem Ipsum</span>
                    </td>
                    <td>
                        <span>@issue.CreateDateFormatted</span>
                    </td>
                    <td class="issue-priority">
                        <span class="priority-@issue.IssuePriorityId">@issue.IssuePriority!.Name</span>
                    </td>
                    <td class="issue-status">
                        <span>@issue.IssueStatus!.Name</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Table Navigation">
        <ul class="pagination justify-content-lg-center">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>